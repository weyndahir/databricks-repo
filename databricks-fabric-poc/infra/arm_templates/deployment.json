{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Databricks/workspaces",
      "apiVersion": "2021-04-01",
      "name": "[parameters('databricksWorkspaceName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "standard"
      },
      "properties": {
        "managedResourceGroupId": "[resourceId('Microsoft.Resources/resourceGroups', parameters('databricksResourceGroupName'))]",
        "workspaceName": "[parameters('databricksWorkspaceName')]"
      }
    },
    {
      "type": "Microsoft.Fabric/fabricWorkspaces",
      "apiVersion": "2021-04-01",
      "name": "[parameters('fabricWorkspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "standard"
        }
      }
    }
  ],
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "databricksWorkspaceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Databricks workspace."
      }
    },
    "databricksResourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Resource group for Databricks."
      }
    },
    "fabricWorkspaceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Microsoft Fabric workspace."
      }
    }
  }
}